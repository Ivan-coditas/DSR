<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <style>
        .Customised {
            background-color: #7097ff;
        }

        .blueText {
            color: #0000FF;
        } 
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index","Dashboard")">Daily Status Report</a>
            </div>
            @if (Session["RoleId"].ToString() == "1")
            {


            <ul class="nav navbar-nav">
                <li><a href="@Url.Action("User", "User")">Add User</a></li>
                <li>
                    <a href="@Url.Action("Index", "Project")">Add Project<span class="caret"></span></a>

                </li>
                <li><a href="@Url.Action("Index", "AssignProjects")">Assign Projects</a></li>

                <li><a href="@Url.Action("Index", "Task")">Task</a></li>

            </ul>
            }
            <ul class="nav navbar-nav navbar-right">


                <li class="text-primary text-strong"><h4><span class="glyphicon glyphicon-user blueText">@Session["UserName"].ToString()</span></h4></li>
                <li><a href="@Url.Action("LogOut","Login")"><span class="glyphicon glyphicon-log-out"></span>Log Out</a></li>

            </ul>
        </div>
    </nav>

    <div class="container">
       
       @RenderBody()
    </div>
    
</body>
</html>
