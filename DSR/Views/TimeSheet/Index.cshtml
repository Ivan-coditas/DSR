
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>

<body>
    <div class="row">
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
            <h2>TimeSheet</h2>
            <div class="form-group">
                <label for="Date">Date</label>
                <input type="datetime" class="form-control" id="Date" />

            </div>
            <div class="form-group">
                <label for="Project">Project</label>
                <input type="datetime" class="form-control" id="Project" />
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input type="text" class="form-control" id="Description" />
            </div>

            <div class="form-group">
                <label for="DueDate">Due Date</label>
                <input type="datetime" class=" form-control" id="DueDate" />
            </div>

            <div>
                <button type="button" id="Submit" class="btn bg-primary">Submit</button>
            </div>


        </div>
        <div class="col-md-4">

        </div>

    </div>
    <br />

    <div class="row ">
        <div class="col-md-1">  </div>
        <div class="col-md-10">
            <table id="TimeSheetTable"
                   class="table table-bordered table-condensed table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Edit</th>
                        <th style="display:none">Id</th>
                        <th>Date</th>
                        <th>Project</th>
                        <th>Description</th>

                        <th>Due Date</th>
                    </tr>
                </thead>
            </table>
        </div>


    </div>
</body>
</html>
